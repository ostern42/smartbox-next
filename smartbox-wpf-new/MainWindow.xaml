<Window x:Class="SmartBoxNext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="SmartBox Next - Medical Image Capture System"
        WindowState="Maximized"
        WindowStyle="None"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Grid>
        <!-- Main WebView2 Container -->
        <wv2:WebView2 x:Name="webView" 
                      Visibility="Collapsed"
                      NavigationCompleted="WebView_NavigationCompleted"/>
        
        <!-- Loading Overlay -->
        <Grid x:Name="loadingOverlay" 
              Background="#F0F0F0" 
              Visibility="Visible">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="SmartBox Next" 
                           FontSize="36" 
                           FontWeight="Light"
                           FontFamily="{StaticResource DefaultFontFamily}"
                           Foreground="{StaticResource MedicalBlueBrush}"
                           Margin="0,0,0,20"/>
                
                <ProgressBar IsIndeterminate="True" 
                             Width="300" 
                             Height="4"
                             Foreground="{StaticResource PrimaryBrush}"/>
                
                <TextBlock x:Name="statusText" 
                           Text="Initializing medical capture system..." 
                           FontSize="14"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
                
                <!-- Error Panel (hidden by default) -->
                <Border x:Name="errorPanel" 
                        Visibility="Collapsed"
                        Background="{StaticResource ErrorBrush}"
                        CornerRadius="4"
                        Padding="20"
                        Margin="0,20,0,0"
                        MaxWidth="500">
                    <StackPanel>
                        <TextBlock Text="Initialization Error" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="errorText" 
                                   TextWrapping="Wrap"
                                   Foreground="White"/>
                        <Button Content="Retry" 
                                Click="RetryButton_Click"
                                Margin="0,10,0,0"
                                Padding="20,5"
                                Background="White"
                                Foreground="{StaticResource ErrorBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        
        <!-- Emergency Exit Button (Always Visible) -->
        <Button x:Name="emergencyExitButton"
                Content="âœ•"
                FontSize="20"
                Width="44"
                Height="44"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Background="#E81123"
                Foreground="White"
                BorderThickness="0"
                Click="EmergencyExit_Click"
                ToolTip="Emergency Exit (Alt+F4)">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center"
                                          VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>