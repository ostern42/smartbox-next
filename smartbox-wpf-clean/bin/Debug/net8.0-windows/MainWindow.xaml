<Window x:Class="SmartBoxNext.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="SmartBox Next - Medical Image Capture System"
        WindowState="Normal"
        WindowStyle="SingleBorderWindow"
        Width="1920"
        Height="1080"
        MinWidth="1280"
        MinHeight="1024"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundBrush}"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    
    <Grid>
        <!-- Main WebView2 Container -->
        <wv2:WebView2 x:Name="webView" 
                      Visibility="Collapsed"/>
        
        <!-- Loading Overlay -->
        <Grid x:Name="loadingOverlay" 
              Background="#F0F0F0" 
              Visibility="Visible">
            <StackPanel VerticalAlignment="Center" 
                        HorizontalAlignment="Center">
                <TextBlock Text="SmartBox Next" 
                           FontSize="36" 
                           FontWeight="Light"
                           FontFamily="{StaticResource DefaultFontFamily}"
                           Foreground="{StaticResource MedicalBlueBrush}"
                           Margin="0,0,0,20"/>
                
                <ProgressBar IsIndeterminate="True" 
                             Width="300" 
                             Height="4"
                             Foreground="{StaticResource PrimaryBrush}"/>
                
                <TextBlock x:Name="statusText" 
                           Text="Initializing medical capture system..." 
                           FontSize="14"
                           Foreground="#666666"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>
                
                <!-- Error Panel (hidden by default) -->
                <Border x:Name="errorPanel" 
                        Visibility="Collapsed"
                        Background="{StaticResource ErrorBrush}"
                        CornerRadius="4"
                        Padding="20"
                        Margin="0,20,0,0"
                        MaxWidth="500">
                    <StackPanel>
                        <TextBlock Text="Initialization Error" 
                                   FontWeight="Bold"
                                   Foreground="White"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="errorText" 
                                   TextWrapping="Wrap"
                                   Foreground="White"/>
                        <Button Content="Retry" 
                                Click="RetryButton_Click"
                                Margin="0,10,0,0"
                                Padding="20,5"
                                Background="White"
                                Foreground="{StaticResource ErrorBrush}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </Grid>
</Window>