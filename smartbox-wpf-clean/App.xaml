<Application x:Class="SmartBoxNext.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindowMinimal.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Modern Windows 11 Style Colors -->
            <SolidColorBrush x:Key="PrimaryBrush" Color="#0078D4"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="#106EBE"/>
            <SolidColorBrush x:Key="AccentBrush" Color="#005A9E"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#F3F3F3"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="#FFFFFF"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="#D13438"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#107C10"/>
            <SolidColorBrush x:Key="WarningBrush" Color="#FFB900"/>
            
            <!-- Medical Theme Overrides -->
            <SolidColorBrush x:Key="MedicalBlueBrush" Color="#0066CC"/>
            <SolidColorBrush x:Key="MedicalGreenBrush" Color="#00A86B"/>
            
            <!-- Global Font Settings -->
            <FontFamily x:Key="DefaultFontFamily">Segoe UI Variable</FontFamily>
            <System:Double x:Key="DefaultFontSize" xmlns:System="clr-namespace:System;assembly=mscorlib">14</System:Double>
        </ResourceDictionary>
    </Application.Resources>
</Application>