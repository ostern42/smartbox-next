{
  "SecurityTestConfiguration": {
    "EncryptionTesting": {
      "RequiredAlgorithms": [
        "AES-256-CBC",
        "AES-256-GCM",
        "ChaCha20-Poly1305"
      ],
      "MinimumKeyLength": 256,
      "RequiredHashAlgorithms": [
        "SHA-256",
        "SHA-384",
        "SHA-512"
      ],
      "DisallowedAlgorithms": [
        "DES",
        "3DES",
        "RC4",
        "MD5",
        "SHA-1"
      ]
    },
    "TLSConfiguration": {
      "RequiredVersions": [
        "TLSv1.2",
        "TLSv1.3"
      ],
      "DisallowedVersions": [
        "SSLv2",
        "SSLv3",
        "TLSv1.0",
        "TLSv1.1"
      ],
      "RequiredCipherSuites": [
        "TLS_AES_256_GCM_SHA384",
        "TLS_CHACHA20_POLY1305_SHA256",
        "TLS_AES_128_GCM_SHA256",
        "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384",
        "TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305_SHA256"
      ],
      "DisallowedCipherSuites": [
        "TLS_RSA_WITH_AES_128_CBC_SHA",
        "TLS_RSA_WITH_AES_256_CBC_SHA",
        "TLS_RSA_WITH_3DES_EDE_CBC_SHA"
      ],
      "RequirePerfectForwardSecrecy": true,
      "RequireServerNameIndication": true
    },
    "CertificateValidation": {
      "MinimumKeyLength": 2048,
      "RequiredSignatureAlgorithms": [
        "SHA256WithRSA",
        "SHA384WithRSA",
        "SHA512WithRSA",
        "SHA256WithECDSA"
      ],
      "DisallowedSignatureAlgorithms": [
        "SHA1WithRSA",
        "MD5WithRSA"
      ],
      "RequireCertificateValidation": true,
      "RequireOCSPStapling": true,
      "MaxCertificateValidityDays": 365
    },
    "NetworkSecurityTesting": {
      "PortScanTesting": {
        "EnablePortScanning": true,
        "AllowedOpenPorts": [
          80,
          443,
          11112
        ],
        "DisallowedOpenPorts": [
          21,
          22,
          23,
          135,
          139,
          445,
          1433,
          3389
        ]
      },
      "VulnerabilityScanning": {
        "EnableVulnerabilityScanning": true,
        "ScannerConfiguration": {
          "ScanDepth": "Comprehensive",
          "IncludeWebApplicationScanning": true,
          "IncludeNetworkScanning": true,
          "IncludeDatabaseScanning": false
        }
      }
    },
    "PenetrationTesting": {
      "EnablePenetrationTesting": true,
      "TestCategories": {
        "SQLInjection": {
          "Enabled": true,
          "TestPayloads": [
            "'; DROP TABLE patients; --",
            "' OR '1'='1",
            "' UNION SELECT * FROM users --"
          ]
        },
        "CrossSiteScripting": {
          "Enabled": true,
          "TestPayloads": [
            "<script>alert('XSS')</script>",
            "javascript:alert('XSS')",
            "<img src=x onerror=alert('XSS')>"
          ]
        },
        "BufferOverflow": {
          "Enabled": true,
          "TestSizes": [
            10000,
            100000,
            1000000
          ]
        },
        "AuthenticationTesting": {
          "Enabled": true,
          "TestBruteForce": false,
          "TestSessionManagement": true,
          "TestPasswordPolicy": true
        }
      }
    },
    "AccessControlTesting": {
      "RoleBasedAccessControl": {
        "TestRoles": [
          "physician",
          "nurse",
          "technician",
          "admin",
          "unauthorized"
        ],
        "TestPermissions": [
          "Treatment",
          "Payment",
          "HealthcareOperations",
          "Research"
        ]
      },
      "SessionManagement": {
        "TestSessionHijacking": true,
        "TestSessionFixation": true,
        "TestSessionTimeout": true,
        "MaxSessionDuration": "08:00:00"
      }
    },
    "DataProtectionTesting": {
      "EncryptionAtRest": {
        "TestDatabaseEncryption": true,
        "TestFileEncryption": true,
        "TestBackupEncryption": true
      },
      "EncryptionInTransit": {
        "TestAPIEncryption": true,
        "TestDICOMEncryption": true,
        "TestDatabaseConnectionEncryption": true
      },
      "DataLeakageTesting": {
        "TestMemoryDumps": true,
        "TestLogFiles": true,
        "TestTemporaryFiles": true,
        "TestErrorMessages": true
      }
    },
    "ComplianceValidation": {
      "NIST": {
        "Framework": "NIST Cybersecurity Framework",
        "RequiredControls": [
          "ID.AM",
          "ID.BE",
          "ID.GV",
          "ID.RA",
          "ID.RM",
          "PR.AC",
          "PR.AT",
          "PR.DS",
          "PR.IP",
          "PR.MA",
          "PR.PT",
          "DE.AE",
          "DE.CM",
          "DE.DP",
          "RS.RP",
          "RS.CO",
          "RS.AN",
          "RS.MI",
          "RS.IM",
          "RC.RP",
          "RC.IM",
          "RC.CO"
        ]
      },
      "HIPAA": {
        "RequireSecurityRule": true,
        "RequirePrivacyRule": true,
        "RequireBreachNotificationRule": true
      },
      "GDPR": {
        "RequireDataProtectionByDesign": true,
        "RequireDataSubjectRights": true,
        "RequireBreachNotification": true
      }
    },
    "TestingSchedule": {
      "ContinuousMonitoring": true,
      "DailyVulnerabilityScans": true,
      "WeeklyPenetrationTests": false,
      "MonthlyComprehensiveAssessment": true,
      "QuarterlyComplianceAudit": true
    },
    "ReportingConfiguration": {
      "GenerateDetailedReports": true,
      "IncludeExecutiveSummary": true,
      "IncludeTechnicalDetails": true,
      "IncludeRemediationRecommendations": true,
      "ReportFormats": [
        "PDF",
        "JSON",
        "XML"
      ],
      "ReportDelivery": {
        "EmailNotifications": true,
        "DashboardIntegration": true,
        "APIEndpoints": true
      }
    }
  }
}