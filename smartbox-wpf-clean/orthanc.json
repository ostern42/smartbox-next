{
  "Name" : "SmartBoxOrthanc",
  "DicomAet" : "ORTHANC",
  "DicomPort" : 4242,
  "HttpPort" : 8042,
  
  // Authentication
  "AuthenticationEnabled" : false,
  "RegisteredUsers" : {},
  
  // DICOM Server Configuration
  "DicomServerEnabled" : true,
  "DicomAlwaysAllowEcho" : true,
  "DicomAlwaysAllowStore" : true,
  "DicomCheckCalledAet" : false,
  "DicomScpTimeout" : 30,
  "DicomAssociationCloseDelay" : 5,
  
  // Storage
  "StorageDirectory" : "/var/lib/orthanc/db",
  "IndexDirectory" : "/var/lib/orthanc/db",
  "StorageCompression" : false,
  
  // Plugins
  "Plugins" : [
    "/usr/share/orthanc/plugins/libModalityWorklist.so",
    "/usr/share/orthanc/plugins/libServeFolders.so"
  ],
  
  // Modality Worklist Configuration
  "Worklists" : {
    "Enable" : true,
    "Database" : "/var/lib/orthanc/worklists",
    "FilterIssuerAet" : false,
    "LimitAnswers" : 0
  },
  
  // DICOM Modalities (devices that can connect)
  "DicomModalities" : {
    "SMARTBOX" : {
      "AET" : "SMARTBOX",
      "Host" : "host.docker.internal",
      "Port" : 104,
      "AllowEcho" : true,
      "AllowFind" : true,
      "AllowFindWorklist" : true,
      "AllowGet" : true,
      "AllowMove" : true,
      "AllowStore" : true,
      "AllowStorageCommitment" : false,
      "AllowTranscoding" : true
    }
  },
  
  // Transfer Syntaxes
  "AcceptedTransferSyntaxes" : [
    "1.2.840.10008.1.2",        // Implicit VR Little Endian
    "1.2.840.10008.1.2.1",      // Explicit VR Little Endian
    "1.2.840.10008.1.2.2",      // Explicit VR Big Endian
    "1.2.840.10008.1.2.4.50",   // JPEG Baseline
    "1.2.840.10008.1.2.4.51",   // JPEG Extended
    "1.2.840.10008.1.2.4.57",   // JPEG Lossless
    "1.2.840.10008.1.2.4.70",   // JPEG Lossless First Order
    "1.2.840.10008.1.2.4.80",   // JPEG-LS Lossless
    "1.2.840.10008.1.2.4.81",   // JPEG-LS Lossy
    "1.2.840.10008.1.2.4.90",   // JPEG 2000 Lossless
    "1.2.840.10008.1.2.4.91",   // JPEG 2000 Lossy
    "1.2.840.10008.1.2.4.92",   // JPEG 2000 Part 2 Lossless
    "1.2.840.10008.1.2.4.93",   // JPEG 2000 Part 2 Lossy
    "1.2.840.10008.1.2.5"       // RLE Lossless
  ],
  
  // Logging
  "Verbose" : true,
  "Trace" : false,
  
  // HTTP Configuration
  "HttpServerEnabled" : true,
  "HttpTimeout" : 60,
  "HttpsServerEnabled" : false,
  
  // Advanced
  "StableAge" : 60,
  "StrictAetComparison" : false,
  "OverwriteInstances" : true,
  "SynchronousCMove" : true,
  "JobsHistorySize" : 100,
  "MediaArchiveSize" : 1,
  "SaveJobs" : true
}